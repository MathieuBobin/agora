<div class="col-md-12">
  <div class="card">
    <%= form_for @proposal do |f| %>
    <div class="card-header card-header-text" data-background-color="default">
      <h4 class="card-title">Propose une initiative dans ta ville :</h4>
    </div>
    <div class="card-content">
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="form-group label-floating">
            <%= f.label :title, "Titre *", class:'control-label' %>   
            <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="form-group label-floating">
            <%= f.label :purpose, "Objectif *", class:'control-label' %>  
            <%= f.text_field :purpose, autofocus: true, autocomplete: "purpose", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="form-group label-floating">
            <%= f.label :city_id, "Ville *" %>
            <%= collection_select(:proposal, :city_id, City.all, :id, :name, prompt: true) %> 
          </div>
        </div>
      </div>
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="form-group label-floating">
            <%= f.label :category_id, "Categorie *" %>
            <%= collection_select(:proposal, :category_id, Category.all, :id, :name, prompt: true) %> 
          </div>
        </div>
      </div>
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="form-group label-floating">
            <%= f.label :description, "Description *", class:'control-label' %>  
            <%= f.text_field :description, autofocus: true, autocomplete: "description", class: "form-control" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <label class="col-sm-1 label-on-left"></label>
        <div class="col-sm-9">
          <div class="label-floating">
            <%= f.label :picture, "Image *" %>  
          </div>
            <%= f.file_field :picture, class: "btn btn-sm btn-info" %>
        </div>
      </div>
      <div class="card-footer text-center">
        <button type="submit" class="btn btn-default btn-fill">Cr√©er Proposition</button>
      </div>
    </div>
    <% end %>
  </div>
</div>