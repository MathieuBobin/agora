  <div class = "container">
    <h2 class="text-center"><b>Les meilleures propositions du moment</b></h2>
    <div class="col-md-6">
      <h3 class="text-center"><b>Paris</b></h3>
      <div class="card box">
        <div class="card-content table-responsive table-full-width">
          <table class="table">
            <tbody>
              <%@proposal_paris.each do |x|%>
              <tr>
                <td></td>
                <td>
                  <h4>#<%= @proposal_paris.index(x)+1 %></h4>
                </td>
                <td>
                  <%if x.picture.attached?%>
                    <%= image_tag x.picture, alt: "Card image", width: 170, style: "height: auto" %>
                  <%else%>
                    <p>=Image=</p>
                  <%end%>
                </td>
                <td class="flex-column">
                  <p><%= x.title %></p>
                  <a class="btn btn-primary btn-round btn-sm" href= "<%= proposal_path(x) %>" role="button">
                    <i class="material-icons" style="font-size: 15px">visibility</i> Voir la proposition
                  </a>
                   <span class="badge"><%= x.category.name %></span>
                </td>
                <td><td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <h3 class="text-center"><b>Lyon</b></h3>
        <div class="card box">
          <div class="card-content table-responsive table-full-width">
            <table class="table">
              <tbody>
                <%@proposal_lyon.each do |x|%>
                <tr>
                  <td>
                    <h4>#<%=@proposal_lyon.index(x)+1%></h4>
                  </td>
                  <td>
                    <%if Proposal.find(x.id).picture.attached?%>
                      <%= image_tag Proposal.find(x.id).picture, alt: "Card image",  width: 170, style: "height: auto"%>
                    <%else%>
                      <p>=Image=</p>
                    <%end%>                  
                  </td>
                  <td>
                    <p><%= x.title %></p>
                    <a class="btn btn-primary btn-round btn-sm" href= "/proposals/<%=x.id%>" role="button">
                      <i class="material-icons" style="font-size: 15px">visibility</i> Voir la proposition
                    </a>
                    <span class="badge badge-primary"><%= x.category.name %></span>
                  </td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

